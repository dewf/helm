module Dialog;

import Widget;
import Signal;

opaque Handle extends Widget.Handle {
    void setParentDialogFlags(Widget.Handle parent); // a version where we're setting WindowFlags (Qt::Dialog) - otherwise it won't work

    void accept();
    void reject();
    int exec();

    void onAccepted(Signal.VoidDelegate handler);
    void onRejected(Signal.VoidDelegate handler);
}

Handle create();
Handle create(Widget.Handle parent);
