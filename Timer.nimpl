module Timer;

import Object;

flags SignalMask {
    Timeout = 1 << 0
}

interface SignalHandler {
    void timeout();
}

opaque Handle extends Object.Handle {
    void setInterval(int msec);
    void setSingleShot(bool state);
    void start(int msec);
    void start();
    void stop();

    void setSignalMask(SignalMask mask);
}

Handle create(SignalHandler handler);
