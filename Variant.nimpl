module Variant;

import Icon;
import PaintResources; // for color, brush, etc (deferred)

@nodispose
opaque Handle {
    bool isValid();
    string toString();
    int toInt();
    
    // no toIcon() yet, because ownership is murky (Icon is currently @nodispose)
    // same for toColor()
}

sumtype Deferred {
    Empty,
    FromString(string value),
    FromInt(int value),
    FromIcon(Icon.Deferred value),
    FromColor(Color.Deferred value)
}
